rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regla por defecto - denegada
    match /{allPaths=**} {
      allow read: if true;  // Permitir lectura pública
      allow write: if false;
    }
    
    // Archivos de usuarios autenticados
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Imágenes de propiedades - permitir lectura pública y escritura autenticada
    match /properties/{propertyId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Imágenes generales - permitir lectura pública
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}